<h1>Bancos</h1>

<table>
  <thead>
    <tr>
      <th>Codbanco</th>
      <th>Descricao</th>
      <th>Estado</th>
      <th>Utilizador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bancos.each do |banco| %>
      <tr>
        <td><%= banco.CodBanco %></td>
        <td><%= banco.descricao %></td>
        <td><%= banco.estado %></td>
        <td><%= banco.utilizador %></td>
        <td><%= link_to 'Show', banco %></td>
        <td><%= link_to 'Edit', edit_banco_path(banco) %></td>
        <td><%= link_to 'Destroy', banco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

