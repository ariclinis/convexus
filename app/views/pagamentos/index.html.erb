<div class="col-md-12">
 <div class="panel panel-primary">
  <div class="panel-body" style="position:relative;margin:0; ">
    <%= link_to new_pagamento_path, class: "btn btn-default btn-info" do %>
    <i class="fa fa-plus"></i> Novo Pagamento
    
    <% end %>
  </div>
</div>
</div>
<p id="notice"><%= notice %></p>

<div class="panel panel-default"> <div class="panel-heading">
  <h3>Listagem de Entidades</h3>
</div> 
<div class="table-responsive">
  <table class="table"> 
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Formapagamento</th>
        <th>Banco</th>
        <th>Conta bancaria</th>
        <th>Numerotalao</th>
        <th>Datapagamento</th>
        <th>Valortalao</th>
        <th>Valorutilizado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pagamentos.each do |pagamento| %>
      <tr>

        <td><%= pagamento.codigo %></td>
        <td><%= pagamento.formaPagamento %></td>
        <td><%= pagamento.banco_id %></td>
        <td><%= pagamento.conta_bancaria_id %></td>
        <td><%= pagamento.numeroTalao %></td>
        <td><%= pagamento.dataPagamento %></td>
        <td><%= pagamento.valorTalao %></td>
        <td><%= pagamento.valorUtilizado %></td>
        <td><%= link_to 'Mostrar', pagamento, class: "label label-info" %></td>
        <td><%= link_to 'Editar', edit_pagamento_path(pagamento), class: "label label-warning" %></td>
        <td><%= link_to 'Eliminar', pagamento, method: :delete, data: { confirm: 'Tem certeza ?' }, class: "label label-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
<div style="float: right;">
  <%= will_paginate( @pagamentos, renderer: BootstrapPagination::Rails, previous_label: "Anterior", next_label: "PrÃ³xima") %></div>
  
</div>

