<%= simple_form_for(@operacoes_fatura) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :codigo %>
    <%= f.input :descricao %>
    <%= f.input :id_estado %>
    <%= f.input :id_utilizador %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
